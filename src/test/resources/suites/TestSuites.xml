<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite configfailurepolicy="continue" name="Test" parallel="tests" thread-count="2">
    <test name="Agoda Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="agoda.Agoda_VerifyUserCanSearchAndSortHotelSuccessfully"/>
            <class name="agoda.Agoda_VerifyUserCanSearchAndFilterHotelSuccessfully"/>
        </classes>
    </test>
    <test name="Agoda Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="agoda.Agoda_VerifyUserCanSearchAndSortHotelSuccessfully"/>
            <class name="agoda.Agoda_VerifyUserCanSearchAndFilterHotelSuccessfully"/>
        </classes>
    </test>
</suite>
